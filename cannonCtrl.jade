doctype html
html(lang="en")
  head
    title= pageTitle
    link(rel="stylesheet" type="text/css" href="style.css")
  body(style="padding=0")
    form(action="/cgi-bin/dataFeeder" method="GET")
      span Azimuthal: 
      input#x(name="x" type="number" value="1" max="1280" min="0")
      span Polar: 
      input#y(name="y" type="number" value="1" max="750" min="0")
      span Force: 
      input#f(name="f" type="number" value="10" max="40" min="10")
      input(type="submit" value="Send to Cannon")
    div#alerts_wrapper
    iframe#iframe_id(width="100%" height="760px" src="https://www.youtube.com/embed/klLJt5B95E8?modestbranding=1&showinfo=0&autoplay=1&controls=0" frameborder="0" allowfullscreen)

    script(type='text/javascript' src='cannonCtrl.js')
